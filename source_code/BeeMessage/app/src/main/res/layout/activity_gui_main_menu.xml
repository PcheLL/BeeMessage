<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <FrameLayout
        android:layout_width="360dp"
        android:layout_height="138dp"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:id="@+id/textViewBeeMessage"
            android:layout_width="260dp"
            android:layout_height="96dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="31dp"
            android:hint="BeeMessage"
            android:textColorHint="#010101"
            android:textSize="40dp" />

        <ImageView
            android:layout_width="146dp"
            android:layout_height="133dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="238dp"

            android:src="@drawable/bee_message192x144" />
    </FrameLayout>
    <Button
        android:id="@+id/buttonChat"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:hint="Chat"
        android:layout_centerVertical="true"
        android:textColorHint="#010101"
        android:textSize="16dp"
        />
    <Button
        android:id="@+id/buttonUsers"
        android:layout_below="@id/buttonChat"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:hint="Users"
        android:layout_centerVertical="true"
        android:textColorHint="#010101"
        android:textSize="16dp"
        />
    <Button
        android:id="@+id/buttonMyTasks"
        android:layout_below="@id/buttonUsers"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:hint="My tasks"
        android:layout_centerVertical="true"
        android:textColorHint="#010101"
        android:textSize="16dp"
        />
    <Button
        android:id="@+id/buttonExit"
        android:layout_below="@id/buttonMyTasks"
        android:layout_toRightOf="@id/editTextText"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/exit"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>
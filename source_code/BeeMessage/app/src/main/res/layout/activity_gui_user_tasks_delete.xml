<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserTasks">

    <TextView
        android:id="@+id/textViewUserTasks"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:hint="User tasks"
        android:textColorHint="#010101"
        android:textSize="25dp"
        />
    <ListView
        android:id="@+id/listViewTasks"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/textViewUserTasks"
        android:layout_centerHorizontal="true"
        android:layout_width="370dp"
        android:layout_height="350dp">
    </ListView>

    <EditText
        android:id="@+id/editTextNewTask"
        android:layout_width="3800dp"
        android:layout_height="50dp"
        android:hint="new task"
        android:layout_below="@id/listViewTasks"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/buttonAdd"
        android:layout_below="@id/editTextNewTask"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:hint="ADD"
        android:textColorHint="#010101"
        android:textSize="16dp"
        />
</RelativeLayout>
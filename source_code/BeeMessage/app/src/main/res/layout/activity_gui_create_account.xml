<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccount">
    <TextView
        android:id="@+id/textViewCreateAccount"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Create account"
        android:textColorHint="#010101"
        android:textSize="35dp"
        />
    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:hint="Email:"
        android:textColorHint="#010101"
        android:textSize="18dp"
        android:layout_below="@id/textViewCreateAccount"
        android:layout_alignLeft="@+id/editTextEmail"

        />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="example@gmail.com"
        android:layout_below="@id/textViewEmail"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="-35dp"

        />
    <TextView
        android:id="@+id/textViewName"
        android:layout_width="160dp"
        android:layout_height="50dp"

        android:hint="First &amp; last name:"
        android:textColorHint="#010101"
        android:textSize="18dp"
        android:layout_below="@id/editTextEmail"
        android:layout_alignLeft="@+id/editTextName"

        />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="Sergey Ivanov"
        android:layout_below="@id/textViewName"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="-35dp"
        />

    <TextView
        android:id="@+id/textViewPassword"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:hint="Password:"
        android:textColorHint="#010101"
        android:textSize="18dp"
        android:layout_below="@id/editTextName"
        android:layout_alignLeft="@+id/editTextPassword"

        />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="*************"
        android:layout_below="@id/textViewPassword"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="-35dp"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:hint="Save"
        android:textColorHint="#010101"
        android:textSize="16dp"
        android:layout_below="@id/editTextPassword"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

</RelativeLayout>
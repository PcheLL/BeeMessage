
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Users">

    <TextView
        android:id="@+id/textViewUsers"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:hint="Users"
        android:textColorHint="#010101"
        android:textSize="25dp"
        />
    <android.support.v7.widget.RecycleView
        android:layout_width="370dp"
        android:layout_height="350dp"
        android:layout_below="@id/textViewUsers"
        android:id="@+id/user_recycle"
        android:layout_centerHorizontal="true"
        />
    <ListView
        android:id="@+id/listViewName"
        android:layout_below="@id/textViewUsers"
        android:layout_centerHorizontal="true"
        android:layout_width="370dp"
        android:layout_height="350dp">
    </ListView>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="3800dp"
        android:layout_height="50dp"
        android:hint="name"
        android:layout_below="@id/listViewName"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/buttonFind"
        android:layout_below="@id/editTextName"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:hint="FIND"
        android:textColorHint="#010101"
        android:textSize="16dp"
        />
</RelativeLayout>